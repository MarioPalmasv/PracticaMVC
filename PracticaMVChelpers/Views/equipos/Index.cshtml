@{
    IEnumerable<String> strList = new List<String> { "POO", "TM", "MAT3", "FIS1" };
}

<form>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("Nombre Usuario")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("txtUserName","", new {@class="form-control"})
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("Contraseña")
        </div>
        <div class="col-sm-4">
            @Html.Password("Contrasena","",new {@class="form-control"})
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("Género")
        </div>
        <div class="col-sm-4">
            @Html.RadioButton("Genero","Masculino", true, new{id="masculino"})Masculino
            @Html.RadioButton("Genero","Femenino", false, new{id="Femenino"})Femenino
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("Dirección")
        </div>
        <div class="col-sm-4">
            @Html.TextArea("Direccion","", new{@class="form-control"})
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("Pasatiempos")
        </div>
        <div class="col-sm-4">
            @Html.CheckBox("Bailar", true)
            @Html.CheckBox("correr")
            @Html.CheckBox("Escalar")
            @Html.CheckBox("Películas")
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("Curso")
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("ddlCurso", new SelectList(strList, strList.FirstOrDefault()), "---- Seleccionar curso ----")
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("Conocimientos")
        </div>
        <div class="col-sm-4">
            @Html.ListBox("Seleccionar Habilidades", new List<SelectListItem>{
            new SelectListItem{Text = "C#", Value = "1"},
            new SelectListItem{Text = "JAVA", Value = "2"},
            new SelectListItem{Text = "C++", Value = "3"},
            new SelectListItem{Text = "C+", Value = "4"},
            })
        </div>
    </div>

    <div class="form-group row mb-4 text-center">
        <div class="col">
            <button type="submit" , class="btn btn-primary">Guardar</button>
        </div>
    </div>

</form>

